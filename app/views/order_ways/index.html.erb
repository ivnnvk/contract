<h1>Listing order_ways</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%=t 'name' %></td>
    </tr>
    <% @order_ways.each do |order_way| %>
      <tr>
        <td><%= order_way.name %></td>
        <td><%= link_to 'Show', order_way %></td>
        <td><%= link_to 'Edit', edit_order_way_path(order_way) %></td>
        <td><%= link_to 'Destroy', order_way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

