<h2><%=t :Listing %>&nbsp;<%=t :source_types %></h2>

<table cellspacing=15 >
  <tr>
    <td><%=t 'Name' %></td>
  </tr>
  <% @source_types.each do |source_type| %>
    <tr>
      <td><%= source_type.name %></td>
      <td><%= link_to t('Show'), source_type %></td>
      <td><%= link_to t('Edit'), edit_source_type_path(source_type) %></td>
      <td><%= link_to t('Destroy'), source_type, method: :delete, data: { confirm: t('Are_you_sure?') } %></td>
    </tr>
  <% end %>
</table>

