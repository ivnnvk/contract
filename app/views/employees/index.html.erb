<h2><%=t :Listing %>&nbsp;<%=t :employees %></h2>

<table cellspacing=15 >
    <tr>
      <td><%=t :User_name %></td>
      <td><%=t :Name %></td>
      <td><%=t :Hour_rate %></td>
    </tr>
  <% @employees.each do |employee| %>
    <tr>
      <td><%= employee.user_name %></td>
      <td><%= employee.name %></td>
      <td><%= employee.hour_rate %></td>
      <td><%= link_to t(:Show), employee %> </td>
      <td><%= link_to t(:Edit), edit_employee_path(employee) %></td>
      <td><%= link_to t(:Destroy), employee, method: :delete, data: { confirm: t("Are_you_sure?") } %></td>
    </tr>
  <% end %>
</table>

<br>

