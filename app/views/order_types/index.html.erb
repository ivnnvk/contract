<h1>Listing order_types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%=t 'name' %></td>
    </tr>
    <% @order_types.each do |order_type| %>
      <tr>
        <td><%= order_type.name %></td>
        <td><%= link_to 'Show', order_type %></td>
        <td><%= link_to 'Edit', edit_order_type_path(order_type) %></td>
        <td><%= link_to 'Destroy', order_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

