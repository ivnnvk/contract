<h1>Listing handover_ways</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%=t 'name' %></td>
    </tr>
    <% @handover_ways.each do |handover_way| %>
      <tr>
        <td><%= handover_way.name %></td>
        <td><%= link_to 'Show', handover_way %></td>
        <td><%= link_to 'Edit', edit_handover_way_path(handover_way) %></td>
        <td><%= link_to 'Destroy', handover_way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

