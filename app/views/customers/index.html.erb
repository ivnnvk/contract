<h2><%=t :Listing %>&nbsp;<%=t :customers_u %></h2>

<table cellspacing=15 >
    <tr>
      <td><%=t 'Name' %></td>
      <td><%=t 'Place' %></td>
      <td><%=t 'Representant' %></td>
      <td><%=t 'Phone' %></td>
    </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.place %></td>
      <td><%= customer.representant %></td>
      <td><%= customer.phone %></td>
      <td><%= link_to t('Show'), customer %></td>
      <td><%= link_to t('Edit'), edit_customer_path(customer) %></td>
      <td><%= link_to t('Destroy'), customer, method: :delete, data: { confirm: t('Are_you_sure?') } %></td>
    </tr>
  <% end %>
</table>

<br>

