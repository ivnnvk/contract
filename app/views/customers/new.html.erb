<h1>New Customer</h1>
<%= form_for :customer, url: customers_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :place %><br>
    <%= f.text_area :place %>
  </p>

  <p>
    <%= f.label :representant %><br>
    <%= f.text_field :representant %>
  </p>

  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>