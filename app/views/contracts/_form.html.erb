<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_for(@contract) do |f| %>
      <% if @contract.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@contract.errors.count, "error") %> prohibited this contract from being saved:</h2>

          <ul>
          <% @contract.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <tr>
        <td>
          <div>
            <%= f.label :contract_number %><br>
            <%= f.text_field :contract_number %>
          </div>

          <div>
            <%= f.label :acceptance_date %><br>
            <%= f.text_field :acceptance_date %>
          </div>

          <div>
            <%= f.label :fulfilment_term %><br>
            <%= f.text_field :fulfilment_term %>
          </div>

          <div>
            <%= f.label :contract_description %><br>
            <%= f.text_area :contract_description %>
          </div>
        </td>
        <td>
          <div>
            <%= f.label :record_number %><br>
            <%= f.text_field :record_number %>
          </div>

          <div>
            <%= f.label :cadastral_office %><br>
            <%= f.collection_select(:cadastral_office_id, @cadastral_offices, :id, :name) %>
          </div>

          <div>
            <%= f.label :township %><br>
            <%= f.collection_select(:township_id, @townships, :id, :name) %>
          </div>

          <div>
            <%= f.label :cadastral_territory %><br>
            <%= f.text_field :cadastral_territory %>
          </div>

          <div>
            <%= f.label :regarding_plat_numbers %><br>
            <%= f.text_field :regarding_plat_numbers %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div>
            <%= f.label :customer %><br>
            <%= f.collection_select(:customer_id, @customers, :id, :name) %>
