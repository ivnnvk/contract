            <%= f.text_area :unfulfill_reason %>
          </div>

          <div>
            <%= f.label :screened_date %><br>
            <%= f.text_field :screened_date %>
          </div>

          <div>
            <%= f.label :screened %><br>
            <%= f.collection_select(:screened_id, @employees, :id, :name) %>
          </div>
        </td>
        <td>
          <div>
            <%= f.label :handover_date %><br>
