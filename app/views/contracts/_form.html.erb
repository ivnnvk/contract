          </div>

          <div>
            <%= f.label :deliver_address %><br>
            <%= f.text_area :deliver_address %>
          </div>

          <div>
            <%= f.label :price_creation %><br>
            <%= f.collection_select(:price_creation_id, @price_creations, :id, :name) %>
          </div>

          <div>
            <%= f.label :price_creation_specification %><br>
