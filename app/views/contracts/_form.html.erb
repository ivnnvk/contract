          </div>

          <div>
            <%= f.label :order_way %><br>
            <%= f.collection_select(:order_way_id, @order_ways, :id, :name) %>
          </div>

          <div>
            <%= f.label :order_type %><br>
            <%= f.collection_select(:order_type_id, @order_types, :id, :name) %>
          </div>
        </td>
        <td>
          <div>
            <%= f.label :bend_date %><br>
            <%= f.text_field :bend_date %>
          </div>

          <div>
            <%= f.label :bend %><br>
            <%= f.collection_select(:bend_id, @employees, :id, :name) %>
          </div>

          <div>
            <%= f.label :make_out_date %><br>
            <%= f.text_field :make_out_date %>
          </div>

          <div>
            <%= f.label :drawed_up %><br>
            <%= f.collection_select(:drawed_up_id, @employees, :id, :name) %>
          </div>

          <div>
            <%= f.label :sketch_number %><br>
            <%= f.text_field :sketch_number %>
          </div>
        </td>
      </tr>

      <tr>
        <td>
          <div>
            <%= f.label :check_date %><br>
